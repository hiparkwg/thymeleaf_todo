<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper      
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"      
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="todo">
   <select id="list" resultType="Todo" parameterType="String">
      select * from todo
      where doc like '%${_parameter}%'
   </select>

   <insert id='insert' parameterType="Todo">
      insert into todo(doc) values(#{doc})
   </insert>
   <update id="update" parameterType="Todo">
      update todo set doc=#{doc}, chk=#{chk}
      where sno=#{sno}
   </update>
   <delete id="delete" parameterType="Integer">
      delete from todo where sno=#{_parameter}
   </delete>
</mapper>